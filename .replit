language = "python3"
entrypoint = "app.py"
run = "python app.py"
hidden = [".env", "*.pyc", ".DS_Store", "__pycache__"]

[nix]
channel = "stable-22_11"

[env]
PYTHONPATH = "${PYTHONPATH}:${workspaceFolder}"
FLASK_APP = "app.py"
FLASK_ENV = "production"
PORT = "443"  # Replit uses port 443 for HTTPS

[packager]
language = "python3"
[packager.features]
enabledForHosting = true
packageSearch = true
guessImports = true

[server]
host = "0.0.0.0"
port = "443"
